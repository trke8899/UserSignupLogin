@model UserSignupLogin.Models.SanPham

@{
    ViewBag.Title = "Chi tiết sản phẩm";
}

<h2>Chi tiết sản phẩm</h2>

<div class="container mt-3">
    <div class="card shadow-sm p-3 mb-3 bg-white rounded" style="max-width: 600px;">
        <div class="row g-0">
            <div class="col-md-5 text-center">
                @if (!string.IsNullOrEmpty(Model.ImageUrl))
                {
                    <img src="@Url.Content(Model.ImageUrl)" alt="@Model.TenSP" class="img-fluid rounded" style="max-height:250px; object-fit:cover;" />
                }
                else
                {
                    <img src="~/Images/no-image.png" alt="No image" class="img-fluid rounded" style="max-height:250px; object-fit:cover;" />
                }
            </div>
            <div class="col-md-7">
                <div class="card-body">
                    <h4 class="card-title">@Html.DisplayFor(m => m.TenSP)</h4>
                    <p class="card-text"><strong>Loại sản phẩm:</strong> @Html.DisplayFor(m => m.LoaiSP)</p>
                    <p class="card-text"><strong>Giá bán:</strong> @Html.DisplayFor(m => m.GiaBan) đ</p>
                    <p class="card-text"><strong>Số lượng:</strong> @Html.DisplayFor(m => m.SoLuong)</p>
                    <p class="card-text"><strong>Mô tả:</strong> @Html.DisplayFor(m => m.MoTa)</p>
                </div>
            </div>
        </div>
    </div>

    <div>
        @Html.ActionLink("Sửa", "Edit", new { id = Model.MaSP }, new { @class = "btn btn-primary" })
        @Html.ActionLink("Trở về danh sách", "Index", null, new { @class = "btn btn-secondary" })
    </div>
</div>
